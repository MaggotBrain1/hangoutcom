{% extends 'base.html.twig' %}

{% block title %}Manage Campus{% endblock %}
{% block main %}

    <h1 class="effetneon">GÃ©rer les campus</h1>
    <h2 class="txtCampus neonText">Filtrer les sites</h2>
    <div class="formFilterCampusContainer">
    {{ form_start(form_filtered_campus) }}
        <div class="formFilterCampusSubContainer">
        {{ form_label(form_filtered_campus.name) }}
        {{ form_widget(form_filtered_campus.name) }}
            <div class="btnAdminSearch">
                <button type="submit" class="btnFilterCamp">Rechercher</button>
                <a href="{{ path('app_admin_manage_campus') }}">
                    <i class="fa-solid fa-arrows-rotate fa-xl effetneon"></i>
                </a>
            </div>
        </div>
    {{ form_end(form_filtered_campus) }}
    <table class="tableCampus">
        <thead class="sticky-top">
        <tr>
            <th class="labelTabCamp"  scope="row" >Campus</th>
            <th class="labelTabAction" scope="row">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if filteredCampus == null %}
        {% for camp in campus %}
            <tr id="trTabCamp">
                <td class="tdName">{{ camp.name }}</td>
                <td class="tdAction">
                    <a href="#" title="{{ camp.id }}"  id="edit_campus" class="text-decoration-none fa-xl effetneon"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a href="{{ path('app_campus_delete',{'id':camp.id}) }}"  class="text-decoration-none fa-xl effetneon"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        {% endfor %}
        {% else %}
        {% for camp in filteredCampus %}
            <tr id="trTabCamp">
                <td class="tdName">{{ camp.name }}</td>
                <td class="tdAction">
                    <a href="#" title="{{ camp.id }}"  id="edit_campus" class="text-decoration-none fa-xl effetneon"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a href="{{ path('app_campus_delete',{'id':camp.id}) }}"  class="text-decoration-none fa-xl effetneon"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        {% endfor %}
        {% endif %}
        <tr class="trTabCamp">
            {{ form_start(form_campus) }}
            <td class="tdName">
                {{ form_row(form_campus.name) }}
            </td>
            <td class="tdAction">
                <button class="btnTdAction " type="submit">
                    <i class="fa-solid fa-circle-plus fa-xl"></i>
                </button>
            </td>
        </tr>
        {{ form_end(form_campus) }}
        </tbody>
    </table>

    </div>

{% endblock %}