{% extends 'base.html.twig' %}

{% block main %}

    




    {{ form_start(editUserForm) }}
    {% if app.user.image != null %}
    <img src="{{ asset('photos/'~app.user.image)}}" alt="Photo de profil" height="200">
    {% else %}
        <img src="{{ asset('photos/user-default.png')}}" alt="Photo de profil" height="96">
    {% endif %}
    <div class="container text-center">
        <h1>Mon profil</h1>
    </div>

    <div class="" >


        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.pseudo) }} :</div>
            <div class="col-6 ">{{ form_widget(editUserForm.pseudo) }}</div>
        </div>

        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.name) }} :</div>
            <div class="col-6 ">{{ form_widget(editUserForm.name) }}</div>
        </div>

        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.lastName) }} :</div>
            <div class="col-6">{{ form_widget(editUserForm.lastName) }}</div>
        </div>
        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.phone) }} :</div>
            <div class="col-6">{{ form_widget(editUserForm.phone) }}</div>
        </div>
        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.email) }} :</div>
            <div class="col-6">{{ form_widget(editUserForm.email) }}</div>
        </div>
        <div class="row mx-auto p-2">
            {#    <div class="col-6">{{ form_label(editUserForm.plainPassword) }} :</div>
        <div class="col-6">{{ form(editUserForm.plainPassword) }}</div> #}
            <div class="col-6">{{ form_label(editUserForm.password) }} :</div>
            <div class="col-6 no-gutters">{{ form_widget(editUserForm.password) }}</div>
        </div>
        <div class="row mx-auto p-2">
            <div class="col-6 ">{{ form_label(editUserForm.plainPassword) }} :</div>
            <div class="col-6 no-gutters">{{ form_widget(editUserForm.plainPassword) }}</div>
        </div>
        <div class="row mx-auto p-2">
            <div class="col-6">{{ form_label(editUserForm.campus) }} :</div>
            <div class="col-6">{{ form_widget(editUserForm.campus) }}</div>
        </div>
        <div class="row mx-auto p-2">
           {% if app.user.image == null %}
            <div class="col-6">{{ form_label(editUserForm.image) }} :</div>
    {% else %}
        <div class="col-6">{{ form_label(editUserForm.image,'modifier ma photo de profil') }} :</div>
    {% endif %}
            <div class="col-6">{{ form_widget(editUserForm.image) }}</div>
    </div>
        <div class="text-center">

    <button type="submit">Enregistrer</button>
        </div>
    </div>


    {{ form_end(editUserForm) }}

{% endblock %}

{% block title %}
    {{ app.user.name }} | {{ app.user.lastname }}
{% endblock %}

