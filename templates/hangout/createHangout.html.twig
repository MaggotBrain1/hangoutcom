{% extends 'base.html.twig' %}

{% block title %}Hello HangoutController!{% endblock %}

{% block main %}
    <h2>Cr√©er une sortie</h2>
    <div class="mainCreate">
            <div class="container">
                {{ form_start(form, {attr: {novalidate: 'novalidate', class: 'formContainer'}}) }}
                <div class="formSubContainer">
                    <div class="rowInpt">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.startTime) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.registerDateLimit) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.MaxOfRegistration) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.duration) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.hangoutInformations) }}
                    </div>
                </div>

                <div class="formSubContainer">
                    <div class="rowInpt">
                        {{ form_row(form.campusOrganizerSite) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.place) }}
                        <button type="button" class="btnAddPlace" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i id="addPlace" class="fa-solid fa-circle-plus" size="40"></i>
                        </button>
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.street) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.zip) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.latitude) }}
                    </div>
                    <div class="rowInpt">
                        {{ form_row(form.longitude) }}
                    </div>
                </div>
            </div>
            <div class="btnContainer">
                <button id="surCoucheBtn" type="submit" class="btn btn-primary">Enregister</button>
              {#  <a href="{{ path('app_hangout_publish', {id: hangout.id}) }}" id="surCoucheBtn" type="submit" class="btn btn-primary" >
                    Publier la sortie
                </a>#}
                <button id="surCoucheBtn" type="submit" class="btn btn-primary"> Publier la sortie</button>

                <button id="surCoucheBtn"   type="submit" class="btn btn-primary">Annuler</button>
            </div>
                  {{ form_end(form) }}

    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
